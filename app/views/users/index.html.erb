<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>E-mail</th>
    <th colspan="3">&nbsp;</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.login %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete, :title => "Destroy#{user.id}" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>

